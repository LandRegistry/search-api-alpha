{
  "settings": {
    "analysis": {
      "analyzer": {
        "postcode_analyzer": {
          "type": "custom",
          "tokenizer": "whitespace",
          "filter": "lowercase"
        }
      }
    }
  },
  "mappings": {
    "titles": {
      "properties": {
        "title_number": {
          "type": "string"
        },
        "property_description": {
          "type": "object",
          "properties": {
            "fields": {
              "type": "object",
              "properties": {
                "addresses": {
                  "type": "object",
                  "properties": {
                    "postcode": {
                      "type": "string",
                      "analyzer": "postcode_analyzer"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
